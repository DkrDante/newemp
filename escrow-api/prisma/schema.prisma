generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  name     String
  email    String     @unique
  password String
  jobs     Job[]
  Proposal Proposal[]
  Payment  Payment[]
}

model Job {
  id          Int        @id @default(autoincrement())
  title       String
  description String
  budget      Float
  user        User       @relation(fields: [userId], references: [id])
  userId      Int
  proposals   Proposal[]
  Payment     Payment[]
}

model Proposal {
  id      Int    @id @default(autoincrement())
  message String
  price   Float
  job     Job    @relation(fields: [jobId], references: [id])
  jobId   Int
  user    User   @relation(fields: [userId], references: [id])
  userId  Int
}

model Payment {
  id        Int      @id @default(autoincrement())
  amount    Float
  status    String   @default("pending")
  job       Job      @relation(fields: [jobId], references: [id])
  jobId     Int
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
}

enum UserType {
  client
  freelancer
}
